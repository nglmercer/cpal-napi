{
  "name": "cpal-napi",
  "version": "0.1.0",
  "description": "N-API wrapper for cpal (Cross-Platform Audio Library)",
  "keywords": [
    "cpal",
    "audio",
    "napi",
    "native-addon",
    "rust"
  ],
  "homepage": "https://github.com/nglmercer/cpal-napi#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nglmercer/cpal-napi.git"
  },
  "bugs": {
    "url": "https://github.com/nglmercer/cpal-napi/issues"
  },
  "license": "MIT",
  "author": {
    "name": "nglmercer"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "clean": "napi clean && cargo clean",
    "test": "bun test",
    "dev": "bun run --watch examples/dev.ts && napi build",
    "type-check": "tsc --noEmit",
    "format": "bun run --filter ./examples --filter ./scripts format",
    "lint": "rustup run stable cargo clippy -- -D warnings"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.5.1",
    "@types/bun": "^1.1.12",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "optionalDependencies": {
    "@napi-rs/cli-platform-linux": "^3.5.1",
    "@napi-rs/cli-platform-darwin": "^3.5.1",
    "@napi-rs/cli-platform-windows": "^3.5.1"
  },
  "napi": {
    "binaryName": "cpal-napi",
    "targets": [
      "x86_64-pc-windows-msvc",
      "i686-pc-windows-msvc",
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu"
    ]
  }
}
